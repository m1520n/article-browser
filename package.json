{
  "name": "article-browser",
  "version": "0.0.1",
  "description": "News article browser",
  "main": "src/index.js",
  "repository": "git@github.com:m1520n/article-browser.git",
  "author": "Micha≈Ç Winiarski <m.winiarski.z@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development parcel public/index.html --open",
    "build": "rm -rf .cache && rm -rf dist && parcel build ./public/index.html --public-url ./",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "prettify": "prettier --write src/**/*.js"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint src/ --fix",
      "jest src/",
      "git add"
    ]
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-starter-kit": "^0.6.3",
    "styled-components": "^4.3.2",
    "styled-normalize": "^8.0.6",
    "unfetch": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.2.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.9.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true,
      "jest/globals": true,
      "es6": true
    },
    "rules": {
      "react/jsx-filename-extension": 0
    },
    "globals": {
      "window": true,
      "document": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
